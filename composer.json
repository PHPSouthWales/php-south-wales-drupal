{
    "name": "php-south-wales/website",
    "description": "Codebase for the PHP South Wales website",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Oliver Davies",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/admin_toolbar": "^2.0",
        "drupal/advancedqueue": "^1.0@beta",
        "drupal/config_installer": "^1.8",
        "drupal/console": "^1.0.2",
        "drupal/core-composer-scaffold": "^8.9",
        "drupal/core-recommended": "^8.9",
        "drupal/features": "^3.8",
        "drupal/hook_event_dispatcher": "^1.25",
        "drupal/markdown": "^1.3",
        "drupal/migrate_tools": "^4.1",
        "drupal/pathauto": "^1.8",
        "drupal/recreate_block_content": "^2.0",
        "drupal/redirect": "^1.5",
        "drupal/tailwindcss": "^2.2",
        "drush/drush": "^9.0.0",
        "illuminate/support": "^7.6",
        "platformsh/config-reader": "^2.3",
        "vlucas/phpdotenv": "^4.1",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "^1.4",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
        "drupal/coder": "^8.3",
        "drupal/core-dev": "^8.9",
        "mglaman/phpstan-drupal": "^0.11.9",
        "phpstan/phpstan": "^0.11.8",
        "phpstan/phpstan-deprecation-rules": "^0.11.2",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "files": [
            "load.environment.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/.htaccess": false,
                "[web-root]/sites/README.txt": false,
                "[web-root]/modules/README.txt": false,
                "[web-root]/profiles/README.txt": false,
                "[web-root]/themes/README.txt": false,
                "[web-root]/web.config": false
            }
        }
    }
}
